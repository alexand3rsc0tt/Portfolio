<h1>Welcome!</h1>

<% @posts.each do |post| %>
  <div class= "post_content">
    <h2 class="post_title"><%= post.title %></h2>
    <h3 class="post_author"><%= post.author %></h2>
      <p><%= truncate(post.body, length: 400) %></p>
      <%= link_to 'Show post', post_path(post.id) %>
  </div>
<% end %>

